<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cht.crm.workbench.dao.ActivityRemarkDao">
    <insert id="insertRemark">
        insert into tbl_activity_remark(id,createTime,createBy,activityId)
        values(#{id},#{createTime},#{createBy},#{activityId})
    </insert>

  <!--  <delete id="deleteRemark">
        delete a from tbl_activity_remark a join tbl_activity b on b.id=#{id}  where b.owner=a.activityId
    </delete>-->
    <delete id="deleteRemark">
        delete  from tbl_activity_remark  where activityId=#{activityId}
    </delete>

   <!-- <select id="countRemarkById" resultType="int">
        select count(a.id) from tbl_activity_remark a join tbl_activity b on b.id=#{id} where b.owner=a.activityId
    </select>-->

    <select id="countRemarkById" resultType="int">
        select count(*) from tbl_activity_remark  where activityId=#{activityId}
    </select>

    <update id="updateRemarkById" >
        update tbl_activity_remark set activityId = #{owner} where activityId = #{activityId}
    </update>
</mapper>
