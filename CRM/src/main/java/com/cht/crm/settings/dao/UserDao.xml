<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cht.crm.settings.dao.UserDao">
   <select id="login" resultType="com.cht.crm.settings.domain.User">
       select count(*) from tbl_user where loginAct=#{loginACt} and loginPwd=#{loginPwd}
   </select>
</mapper>